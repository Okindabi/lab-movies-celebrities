<h2>Edit {{results.title}}</h2>

<form action="/movies/{{results._id}}/edit" method="post">
  <label>
    title
    <input type="text" name="title" value="{{results.title}}" />
  </label><br />
  <label>
    genre
    <input type="text" name="genre" value="{{results.genre}}" />
  </label><br />
  <label>
    plot
    <input type="text" name="plot" value="{{results.plot}}" /></label>
  <br />
  <label>
    cast
    <select name="cast" multiple>
      {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
  </label>
  <br />

  <button type="submit">Save changes</button>
</form>